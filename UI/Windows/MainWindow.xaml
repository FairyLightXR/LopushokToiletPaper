<Window x:Class="LopushokToiletPaper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LopushokToiletPaper"
        mc:Ignorable="d"
        Title="&quot;Lopushok&quot;" Height="800" Width="1200" WindowStartupLocation="CenterScreen" MinWidth="800" MinHeight="400" Icon="\UI\Logos\Лопушок.ico">
    <Grid Background="#CEFFF9">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="35"></RowDefinition>
        </Grid.RowDefinitions>
        <Frame Grid.Row="1" x:Name="mainFrame" NavigationUIVisibility="Hidden" Background="{StaticResource BasicBackground }" ContentRendered="MainFrame_ContentRendered"></Frame>
        <Image Source="\UI\Logos\Лопушок.png" HorizontalAlignment="Left" Stretch="Uniform"></Image>
        <WrapPanel Grid.Row="0" HorizontalAlignment="Center">
            <TextBlock FontSize="40" Text="Лопушок" FontWeight="DemiBold" FontStyle="Italic"></TextBlock>
        </WrapPanel>
        <Button Grid.Row="0" HorizontalAlignment="Right" Content="Назад" Visibility="Hidden" x:Name="BackBtn" Click="BackBtn_Click"></Button>
    </Grid>
</Window>
